<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <!-- pgs_slider_thumb_height 可控制滑块高度
            	 pgs_slider_thumb_width	  可控制滑块宽度
            	 具体可在pgs_slider_dimens.xml中修改 -->
            <size
                android:height="@dimen/pgs_slider_thumb_height"
                android:width="@dimen/pgs_slider_thumb_width" />
            <solid android:color="#ffffff" />
            <!--边框-->
            <stroke
                android:width="1px"
                android:color="#dedede" />
        </shape>
    </item>
    <!-- 设置滑块图标 -->
    <!--pgs_slider_thumb_offset 偏移 限制图标大小-->
    <item android:drawable="@drawable/ic_thumb"
        android:left="@dimen/pgs_slider_thumb_offset"
        android:top="@dimen/pgs_slider_thumb_offset"
        android:bottom="@dimen/pgs_slider_thumb_offset"
        android:right="@dimen/pgs_slider_thumb_offset"/>
</layer-list>
