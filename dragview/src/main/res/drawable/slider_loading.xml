<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	<item>
        <shape>
            <size
                android:height="@dimen/pgs_slider_thumb_height"
                android:width="@dimen/pgs_slider_thumb_width" />
            <solid android:color="#a9f5a9" />
            <!--边框-->
            <stroke
                android:width="1px"
                android:color="#2dc32d" />
        </shape>
    </item>

    <!-- 设置loading动画 -->
    <item android:drawable="@drawable/slider_rotate"
        android:left="@dimen/pgs_slider_thumb_offset"
        android:top="@dimen/pgs_slider_thumb_offset"
        android:bottom="@dimen/pgs_slider_thumb_offset"
        android:right="@dimen/pgs_slider_thumb_offset"/>
    
</layer-list>
